{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current Module",
            "type": "debugpy",
            "request": "launch",
            "module": "${input:moduleName}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Test Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/tests",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Claude-Qwen CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [
                "--root",
                "${workspaceFolder}/tests/fixtures/sample-cpp"
            ]
        },
        {
            "name": "Run All Unit Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/run_unit_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run All Tests (Unit + E2E)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/run_all_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Test: Filesystem Tools",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/unit/test_tools_only.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Test: Ollama Connection",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/unit/test_ollama_hello.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Test: Basic",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/unit/test_basic.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Module: remotectl.cli",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.remotectl.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [
                "list"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Module: remotectl.cli_interactive",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.remotectl.cli_interactive",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Module: interactive_base (demo)",
            "type": "debugpy",
            "request": "launch",
            "module": "backend.interactive_base",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "inputs": [
        {
            "id": "moduleName",
            "type": "promptString",
            "description": "Enter module name (e.g., backend.remotectl.cli_interactive)",
            "default": "backend.cli"
        }
    ]
}
